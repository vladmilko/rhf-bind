{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "$": ["./src/*"]
    },
    "strict": true,
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "ES5",
    "jsx": "react-jsx",
    "allowJs": false,
    "noEmit": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "noUnusedLocals": true
  },
  "include": ["./src", "./configs/jest/setupTests.ts"],
  "exclude": ["node_modules"]
}

{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "ES5",
    "jsx": "react-jsx",
    "allowJs": false,
    "noEmit": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "types": ["@testing-library/jest-dom", "@testing-library/dom", "@testing-library/react"],
    "lib": ["dom", "dom.iterable", "esnext"],
    "baseUrl": "."
  },
  "exclude": ["node_modules", "__tests__"]
}

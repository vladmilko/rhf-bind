{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "$*": ["./src/*"]
    },
    "strict": true,
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "ES5",
    "jsx": "react-jsx",
    "allowJs": false,
    "noEmit": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "types": ["@testing-library/jest-dom", "@testing-library/dom", "@testing-library/react"]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
